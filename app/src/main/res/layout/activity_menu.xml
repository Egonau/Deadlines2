<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawingCacheQuality="high"
        android:soundEffectsEnabled="true"
        android:textSize="20sp"
        android:textStyle="bold"
        app:abbreviationsBarColor="#ffa300"
        app:abbreviationsLabelsColor="#FFFFFF"
        app:firstDayOfWeek="monday"
        app:headerColor="@color/colorAccent"
        app:headerLabelColor="#FFFFFF"
        app:pagesColor="#FFFFFF"
        app:selectionBetweenMonthsEnabled="false"
        app:selectionColor="#FFFFFF"
        app:selectionDisabled="true"
        app:todayLabelColor="#011EFF">

    </com.applandeo.materialcalendarview.CalendarView>

    <Button
        android:id="@+id/olympsButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:background="@color/colorAccent"
        android:onClick="Olymps"
        android:text="ОЛИМПИАДЫ"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>