<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeadlineInfoActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/olympsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/suggestionsTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/noSuggestionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="ПРЕДЛОЖЕНИЙ НЕТ"
        android:textColor="@color/colorAccent"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/suggestionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="СПИСОК ПРЕДЛОЖЕНИЙ"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>